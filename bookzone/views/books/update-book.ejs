<navbar class="general-font" id="profile-navbar">
    <a href="/">Home</a>
    <a href="/profile">Profile</a>   
  </navbar>
  
<h1 class="subtitle-font">Update book</h1>
<form method="POST" class="general-font" id="update-book-page">
    <label>Title: <input type="text" name="bookTitle" value="<%= bookToUpdate.bookTitle %>" class="input-fields"/></label><br>
    <label>Author: <input type="text" name="author" value="<%= bookToUpdate.author %>" class="input-fields"/></label><br>
    <label>Genre: <input type="text" name="genre" value="<%= bookToUpdate.genre %>" class="input-fields"/></label><br>
    <label>Read: <select type="text" name="read" class="yes-no-btn">
      <% if (bookToUpdate.read === 'Yes') { %>
        <option selected>Yes</option>
        <option>No</option>
      <% } else { %>
        <option>Yes</option>
        <option selected>No</option>
      <% } %>
    </select></label><br>
    <button class="btns">Update</button>
</form>

